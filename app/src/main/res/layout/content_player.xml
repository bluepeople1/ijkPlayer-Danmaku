<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contentPanel"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#dd000000">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ica_light_ic_action_previous_item"
            android:gravity="center_vertical"
            android:text="纪念松来未右"
            android:textColor="#fff"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/system_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16:27"
                android:textColor="#fff"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/battery"
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/player_battery_icon" />

            <TextView
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:textColor="#fff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="投硬币"
                android:textColor="#fff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/definition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="高清"
                android:textColor="#fff"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/setting"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/ic_player_options_menu" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/controller_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#dd000000">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/playorpause"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/bili_player_play_can_pause" />

            <TextView
                android:id="@+id/textprogress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="03:05/03:14"
                android:textColor="#fff"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/damaku_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/bili_player_danmaku_is_open"
                android:text="弹幕开关"
                android:textColor="#fff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/send_danmaku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="发射弹屏"
                android:textColor="#fff"
                android:textSize="15sp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/lock_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:textColor="#fff"
                android:textSize="15sp" />

        </LinearLayout>

    </RelativeLayout>

    <SeekBar
        android:id="@+id/seekbar"
        android:layout_above="@+id/controller_bar"
        style="@style/Widget.App.Seekbar.Pink"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8.0dip"
        android:paddingLeft="16.0dip"
        android:background="#dd000000"
        android:progress="30"
        android:paddingRight="16.0dip"
        android:paddingTop="8.0dip" />

    <include
        android:layout_centerInParent="true"
        layout="@layout/dialog_progress"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

</RelativeLayout>